<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/typeCidNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="193dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/ic_search_glass_24dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Type CID Number"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonCompoundDataDownload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/typeCidNumber"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/buttons"
        android:text="Download Compound Data" />

    <ProgressBar
        android:id="@+id/cmpdsDataLoader_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonCompoundDataDownload"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/benzene_spin"
        android:visibility="gone"
        />





</RelativeLayout>